{
  "extends": ["semistandard"],
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "space-before-function-paren": ["error", {"anonymous": "ignore", "named": "never", "asyncArrow": "ignore"}],
    "prefer-promise-reject-errors": ["off"]
  },
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  }
}
